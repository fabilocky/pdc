{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - Ordvolvo {{ 'views.show.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Ordvolvo</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Fecha</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.fecha|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Cotizacion</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.cotizacion }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Cliente</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.cliente }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Cuit</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.cliente.cuit }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Chofer</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.chofer }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Telefono</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.cliente.telefono }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Chasis</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.chasis }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Modelo</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.modelo }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Dominio</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.dominio }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Km</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.km }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Hs</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.hs }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Color</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.color }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Neto</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.neto }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Iva</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.iva }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Total</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.total }}</span>            </div>
        </div>    </fieldset>
    <table class="table-bordered">
        <tbody>
            <tr>            
                <td class="th">Solicitud</td>
            </tr>
        {% for solicitud in entity.solicitudes %}
            <tr>            
                <td>{{ solicitud.descripcion }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <table class="table-bordered">
        <tbody>
            <tr>            
                <td class="th">Cantidad</td>
                <td class="th">Codigo</td>
                <td class="th">Denominacion</td>
                <td class="th">P. Unit.</td>
                <td class="th">Subtotal</td>
            </tr>
        {% for consumos in entity.consumos %}
            <tr>            
                <td>{{ consumos.cantidad }}</td>
                <td>{{ consumos.idRepvolvo.codigo }}</td>
                <td>{{ consumos.idRepvolvo }}</td>
                <td>{{ consumos.idRepvolvo.precio }}</td>
                <td>{{ consumos.subtotal }}</td>                
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <table class="table-bordered">
        <tbody>
            <tr>            
                <td class="th">Denominacion</td>
                <td class="th">Hs</td>                
                <td class="th">Subtotal</td>
            </tr>
        {% for operaciones in entity.operaciones %}
            <tr>            
                <td>{{ operaciones.denominacion }}</td>
                <td>{{ operaciones.hs }}</td>
                <td>{{ operaciones.subtotal }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <table class="table-bordered">
        <tbody>
            <tr>
                <td class="th">Cantidad</td>                
                <td class="th">Denominacion</td>
                <td class="th">P. Unit</td>                
                <td class="th">Subtotal</td>
            </tr>
        {% for terceros in entity.terceros %}
            <tr>
                <td>{{ terceros.cantidad }}</td>                
                <td>{{ terceros.denominacion }}</td>
                <td>{{ terceros.unitario }}</td>
                <td>{{ terceros.subtotal }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('ordvolvo') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            </a>
        </div>
        <div class="float-left">
            <a class="btn btn-primary" href="{{ path('ordvolvo_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                </a>
            </div>
            <div class="float-left">
                <form action="{{ path('ordvolvo_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                        <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    </form>
                </div>
         <div class="float-left">
        <a class="btn btn-success" href="{{ path('orden_imprimir', { 'id': entity.id }) }}">
            Imprimir Orden
        </a>
    </div>
            <div class="float-left">
        <a class="btn btn-success" href="{{ path('ordvolvo_remito', { 'id': entity.id }) }}">
            Generar Remito
        </a>
    </div>
            </div>
            <style>
                    table {
                        table-layout: fixed;
                        width: 100%;
                        font-size: 10pt;
                    }
                    .table-bordered {
                        -moz-border-bottom-colors: none;
                        -moz-border-left-colors: none;
                        -moz-border-right-colors: none;
                        -moz-border-top-colors: none;
                        border-collapse: separate;
                        border-color: #DDDDDD;
                        border-image: none;
                        border-radius: 4px;
                        border-style: solid;
                        border-width: 1px;
                    }
                    .table-bordered td {
                        border: solid thin #DDDDDD;
                    }
                    .table-bordered td.th {
                        font-weight: bold;
                    }
                </style>
{% endblock %}